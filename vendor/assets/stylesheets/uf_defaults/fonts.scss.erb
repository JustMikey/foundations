/* there are a bunch of other files that I'm not using but
could include and maybe will someday. But for now, I'm just
including the Roboto-Regular.ttf file */
@font-face {
  font-family: "Roboto";
  src: url(<%=asset_path("Roboto-Regular.ttf")%>);
}

@font-face {
  font-family: "Roboto-Bold";
  src: url(<%=asset_path("Roboto-Bold.ttf")%>);
  font-weight: bold;
}

@font-face {
  font-family: "Roboto-italic";
  src: url(<%=asset_path("Roboto-Italic.ttf")%>);
  font-style: italic;
}

* {
  font-size: var(--default-font-size);
  font-family: "Roboto";
  color: var(--default-text-color);
}

strong {
  font-family: "Roboto-Bold";
}

em {
  font-family: "Roboto-italic";
}
